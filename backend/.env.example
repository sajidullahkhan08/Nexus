# Backend Environment Variables
# Copy this file to .env for production deployment

# Railway Configuration
# These will be automatically set by Railway:
# RAILWAY_PROJECT_ID=your-project-id
# RAILWAY_ENVIRONMENT=production
# RAILWAY_STATIC_URL=https://your-app.railway.app

# Server Configuration
NODE_ENV=production
PORT=10000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nexus-platform?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Email Configuration (Optional - for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Cloudinary Configuration (Optional - for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend URL (Update with your Vercel deployment URL)
FRONTEND_URL=https://your-vercel-app.vercel.app

# Security
BCRYPT_ROUNDS=12

# Optional: Monitoring and Analytics
# SENTRY_DSN=
# NEW_RELIC_LICENSE_KEY=

# Railway-specific Notes:
# - PORT will be automatically set by Railway
# - Use Railway's environment variable system for sensitive data
# - Database URL should be configured in Railway dashboard
# - JWT secrets should be generated securely in Railway